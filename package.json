{
  "name": "fastify-tests",
  "author": "Germ√°n Aliprandi <galiprandi@gmail.com>",
  "version": "1.0.0",
  "description": "A personal boilerplate for Fastify",
  "main": "index.js",
  "keywords": [],
  "license": "ISC",
  "scripts": {
    "dev": "ts-node-dev -T ./src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node ./built/index.js",
    "lint:fix": "eslint src --fix",
    "prepare": "husky install",
    "test": "NODE_ENV=test tap --node-arg=--require=ts-node/register ./src/**/*.test.ts",
    "test:watch": "npm test -- -w -n"
  },
  "dependencies": {
    "@fastify/autoload": "^5.7.1",
    "@fastify/cors": "^8.3.0",
    "fastify": "^4.21.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.2",
    "@tsconfig/node18": "^18.2.0",
    "@types/node": "^20.4.5",
    "@types/tap": "^15.0.8",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.9.0",
    "eslint-config-standard-with-typescript": "^37.0.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "nodemon": "^3.0.1",
    "pino-pretty": "^10.2.0",
    "prettier": "3.0.0",
    "tap": "^16.3.8",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix --max-warnings 0",
      "prettier --write"
    ]
  },
  "tap": {
    "check-coverage": false
  }
}